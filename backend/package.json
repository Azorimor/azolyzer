{
  "name": "discordbot-backend",
  "version": "0.0.1",
  "description": "The backend for the azorimor discord bot",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "tsc": "tsc",
    "start": "node --inspect=5858 -r ts-node/register ./src/index.ts",
    "start:watch": "nodemon",
    "start-tsc": "tsc && node ./dist/index.js",
    "lint": "eslint . --ext .ts",
    "lint-fix": "eslint . --ext .ts --fix"
  },
  "author": "Azorimor",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "discord.js": "^12.2.0",
    "discord.js-commando": "git+https://github.com/discordjs/Commando.git",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "moment": "^2.27.0",
    "pg": "^8.3.0",
    "redis": "^3.0.2",
    "sqlite": "^4.0.14",
    "sqlite3": "^5.0.0",
    "typeorm": "^0.2.25",
    "winston": "^3.3.3",
    "winston-transport": "^4.4.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.6",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.7",
    "@types/jest": "^26.0.7",
    "@types/sqlite3": "^3.1.6",
    "@typescript-eslint/eslint-plugin": "^3.7.1",
    "@typescript-eslint/parser": "^3.8.0",
    "eslint": "^7.5.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^23.19.0",
    "eslint-plugin-no-loops": "^0.3.0",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "lint-staged": "^10.2.11",
    "nodemon": "^2.0.4",
    "ts-jest": "^26.1.4",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js}": [
      "./node_modules/.bin/eslint --fix",
      "git add"
    ]
  },  
  "jest": {
    "testEnvironment": "node",
    "preset": "ts-jest",
    "coveragePathIgnorePatterns": [
      "./node_modules/",
      "./dist/",
      "./lib/"
    ],
    "modulePathIgnorePatterns": [
      "./dist/"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "setupFiles": [
      "./test/setup.ts"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm start",
    "ext": "ts"
  }
}
